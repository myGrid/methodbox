<% drag_id=model_to_drag_id @person %>
<% persons_asset_hash = (@person.user ? Asset.classify_and_authorize(@person.user.assets, true, current_user) : {}) -%>
<% persons_asset_hash.each_key {|key| persons_asset_hash[key].sort!{|x,y| y.created_at <=> x.created_at}}%>

<div class="yui-skin-sam">
	<div id="extracts" class="yui-navset">
		<ul class="yui-nav">
			<% if mine?(@person) -%>
				<li class="selected"><a href="#person_tab_1" title="Your details"><em><%= h 'Me' %></em></a></li>
			<% else -%>
				<li><a href="#person_tab_1" title="Details about "<%= @person.name -%>><em><%= h @person.name %></em></a></li>
			<% end -%>
			<% if mine?(@person) -%>
				<li><a href="#person_tab_2" title="Searches for surveys with details of times and variables"</em><%= h "My Searches" %></a></li>
			<% end -%>
			<% unless persons_asset_hash.empty? -%>
    				<% persons_asset_hash.each_key do |resource_type| -%>
      					<% visible_resource_type = resource_type.titleize.pluralize -%>
      					<% visible_resource_type = "Data Extracts" if visible_resource_type=="Csvarchives" %>
      					<% visible_resource_type = "Methods and Scripts" if visible_resource_type=="Scripts" %>
					<% if mine?(@person) -%>
						<li><a href="#person_tab_1" title="Details about "<%= @person.name -%>><em><%= h @person.name %></em></a></li>
		        My <%= "#{visible_resource_type} (#{resources.length})" -%>
		      			<% else -%>
						<li><a href="#person_tab_1" title="Details about "<%= @person.name -%>><em><%= h @person.name %></em></a></li>
		        <%= "#{@person.first_name.pluralize}" -%><%= "#{visible_resource_type} (#{resources.length})" -%>
		      			<% end %>
				<% end -%>
			<% end -%>
		</ul>
		<!-- tab content -->
		<div class="yui-content">
			<div id="person_tab_1">
				<%= render :partial => "person_details" -%>	
			</div>
			<% if mine?(@person) -%>
				<div id="person_tab_2">
					<%= render :partial => "search/previous_searches" -%>
				</div>
			<% end -%>
			<% unless persons_asset_hash.empty? -%>
    				<% persons_asset_hash.each_key do |resource_type| -%>
      					<% visible_resource_type = resource_type.titleize.pluralize -%>
      					<% visible_resource_type = "Data Extracts" if visible_resource_type=="Csvarchives" %>
      					<% visible_resource_type = "Methods and Scripts" if visible_resource_type=="Scripts" %>
      					<% unless (resources = persons_asset_hash[resource_type]).nil? || resources.empty? -%>
						<%= render :partial => "assets/resource_list", :locals => { :collection => resources, :narrow_view => true, :authorization_for_showing_already_done => true } -%>	
					<% end -%>
				<% end -%>
			<% end -%>		
    		</div>
  	</div>
</div>
 
 <% unless persons_asset_hash.empty? -%>
    <% persons_asset_hash.each_key do |resource_type| -%>
      <% visible_resource_type = resource_type.titleize.pluralize -%>
      <% visible_resource_type = "Data Extracts" if visible_resource_type=="Csvarchives" %>
      <% visible_resource_type = "Methods and Scripts" if visible_resource_type=="Scripts" %>
      <% unless (resources = persons_asset_hash[resource_type]).nil? || resources.empty? -%>
        <div id="<%= resource_type.downcase.pluralize -%>" class="tabbertab listings_blank" title="<%= mine?(@person)? "All of your " + visible_resource_type : @person.name.pluralize + " public " + visible_resource_type -%>">
          <h3>	 <% if mine?(@person) -%>
		        My
		      <% else -%>
		        <%= "#{@person.first_name.pluralize}" -%>

		      <% end %> <%= "#{visible_resource_type} (#{resources.length})" -%></h3>
          <%= render :partial => "assets/resource_list", :locals => { :collection => resources, :narrow_view => true, :authorization_for_showing_already_done => true } -%>
        </div>
      <% end -%>
    <% end -%>
  <% end -%>
</div>
