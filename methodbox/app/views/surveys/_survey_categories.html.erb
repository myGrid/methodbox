<div id="survey_ids">
<ul>
<% @surveys.each do |survey_id| %>
	<% survey = Survey.find(survey_id) %>
	<li>
	<%= check_box_tag "survey_ids[]", survey.id, false %>
	<%= survey.title %>
	</li>
<% end %>
</ul>
</div>
<div id="categories_list">
<p>Variable Categories</p>
<ul>
<% @all_categories.each do |category| -%>
<li><%= link_to_remote(category, :url=>{:action=>"find_for_multiple_surveys_by_category", :controller=>"variables", :category=>h(category)}, :submit=>'survey_ids', :title=>"Show all variables with this category for selected surveys") -%></li>
<% end -%>
</ul>
</div>
<div id="variables_list">
</div>