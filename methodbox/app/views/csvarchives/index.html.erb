<div>
	<div style="padding-left:7px;text-align: center;width:100%">
		<% form_tag '/search/' do -%>
  			<%= hidden_field_tag 'search_type', 'data extracts' -%>
  			<%= text_field_tag :search_query, @search_query -%>
  			<%= submit_tag "Search" ,:title=> "Enter a term and click to search all data extracts"-%>
		<% end  -%>
	</div>
	<% unless @all_archives.empty? %>
  		<div class="tabber" id="archivestab">
    		<div id="my_archives_tab" class="tabbertab" title="All of the data extracts you have created">
      			<h3>My Data Extracts</h3>
				<%= will_paginate @my_archives, :param_name=>'my_page' %>
      			<%= render :partial => "assets/resource_list", :locals => { :collection => @my_archives, :authorization_for_showing_already_done=>true } %>
				<%= will_paginate @my_archives, :param_name=>'my_page' %>
    		</div>
    		<div id="all_archives_tab" class="tabbertab" title="Data extracts from all the users in the MethodBox">
      			<h3>All Data Extracts</h3>
				<%= will_paginate @all_archives, :param_name=>'all_page' %>
      			<%= render :partial => "assets/resource_list", :locals => { :collection => @all_archives, :authorization_for_showing_already_done=>true} %>
				<%= will_paginate @all_archives, :param_name=>'all_page' %>
			</div>
  		</div>
		<% else %>
  			<p>There are no CSV archives available to view.  To create one add <%= link_to "survey variables", surveys_path -%> to your cart and then create one from all or a subset of these variables</p>
		<% end %>
</div>