<% @search_query="Enter search here" unless @search_query -%>
<% @search_type="People" unless @search_type -%>

<%# if logged_in? && current_user.is_admin? -%>
  <%#= icon "lock", admin_url, "Admin enabled", {:id=>"adminmode"}, "Admin enabled" -%>
<%# end -%>
<% if SOLR_ENABLED -%>
  <% form_tag '/search/' do -%>
    <%= text_field_tag :search_query, @search_query,:onclick=>"javascript:$('search_query').select();" -%>
	<% if logged_in? -%>
    <%= select_tag :search_type, options_for_select(search_type_options,@search_type)  -%>
	<% else %>
	<% @search_type="Surveys" unless @search_type -%>
	<%= select_tag :search_type, options_for_select(non_reg_search_type_options,@search_type)  -%>
	<% end %>
    <%= submit_tag "Go"  -%>
  <% end  -%>
<% end -%>

