	  //var oRecord = this.getRecord(elCheckbox); 
	  var id = record.getData().id;
	  //oRecord.setData("check",elCheckbox.checked); 
          selectVariable(id);
	});

    //this.dataTable.doBeforeSortColumn = function(oColumn, sSortDir) {
