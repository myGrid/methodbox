<div id="cart-buttons">
<%= render :partial => "cart/all_buttons" -%>
</div>
<% if logged_in? -%>
  <div class="sidebar-bg">
    <div class="sidebar">
      <ul class="vbuttons">
        <li><%= icon "new", new_survey_url, "Create a new " + SURVEY.downcase, {:title=>"Add a new " + SURVEY.downcase + " to MethodBox"}, "Create a new " + SURVEY.downcase %></li>
        <li><%= icon "new", nesstar_datasource_surveys_url, "Add a new datasource", {:title=>"Add a new Nesstar datasource to MethodBox"}, "Add a new datasource" %></li>
        <% if controller.action_name == "show" %>
          <% if current_user.is_admin? && @survey.survey_type.is_ukda %>
            <li><%= icon "new", url_for({:action => "new", :controller=> "datasets",:survey => @survey.id}), "Add a " + DATASET.downcase+ " to this " + SURVEY.downcase, {:title=>"Upload a new " +  DATASET.downcase + " from file for this " + SURVEY.downcase}, "Upload a new " +  DATASET.downcase + " from file for this " + SURVEY.downcase -%></li>
          <% elsif Authorization.is_authorized?("edit", nil, @survey, current_user) %>
            <li><%= icon "new", url_for({:action => "new", :controller=> "datasets",:survey => @survey.id}), "Upload a new " +  DATASET.downcase + " from file for this " + SURVEY.downcase, {:title=>"Upload a new " +  DATASET.downcase + " from file for this " + SURVEY.downcase } -%></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end -%>
<div class="sidebar-bg">
  <div class="sidebar">
    <ul class="vbuttons">
      <li><%= icon "show", surveys_url, "Search " + SURVEY.pluralize.downcase, {:title=>"Look at the " + SURVEY.pluralize.downcase + " using the tabular view and search them for variables"}, "Search " + SURVEY.pluralize.downcase %></li>
    </ul>
  </div>
</div>
<%= render :partial => 'help_sidebar' -%>

