<div class="right">
  <div>
    <div class="right" style="margin-left: 2em;">
      <ul style="margin:0;">
        <li style="list-style: none; line-height: 1;">
          <%= icon('cart', cart_url, "View Cart", {:title => current_user.cart_items.size > 0 ? "You have some variables in your cart" : "There are no variables in your cart" }, current_user.cart_items.size > 0 ? "My Variable Cart(" + current_user.cart_items.size.to_s + ")" : "My Variable Cart" ) -%>
        </li>
        <li style="list-style:none; line-height: 1;">
          <%= icon("message", messages_url, "View your messages", {:title=>current_user.messages_to.size > 0 ? "You have some unread messages" : "You have no unread messages"}, "My Messages(" + current_user.messages_to.size.to_s + ")") -%>
        </li>
        <li style="list-style: none; line-height: 1;">
          <%= icon "logout", logout_url, nil, nil, "&nbsp;Logout" -%>
        </li>
      </ul>
    </div>
    <div class="left center" id="avatar-pic">
      <%= link_to(avatar(current_user.person, 40, true), url_for(current_user.person), :title=>(h(current_user.person.name))) -%>
      <br/>
      <%= link_to current_user.person.name, person_url(current_user.person), :title=>"Look at your profile&nbsp;" -%>
    </div>
  </div>
</div>
