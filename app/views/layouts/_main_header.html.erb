<% if SANDBOX -%>
<%= render :partial => "layouts/sandbox_warning_header" -%>
<% end -%>
<% if logged_in? && current_user.is_admin? -%>
<%= link_to "Admin functions", admin_url -%>
<% end -%>
<% if logged_in? && controller.controller_name.downcase == "home" && controller.action_name.downcase == "search"-%>
<%= render :partial => "layouts/simple_logged_in_controls" -%>
<% elsif logged_in? -%>
<%= render :partial => "layouts/logged_in_controls" -%>
<% else -%>
<%= render :partial => "layouts/logged_out_controls" -%>
<% end -%>
<% if controller.controller_name.downcase == "home" && controller.action_name.downcase == "search" -%>
<%= render :partial => "layouts/welcome_message" -%>
<% else -%>
<div class="left" style="margin-left: 1em; padding-top: 2px; position: absolute; left: 0;">
<%= link_to image_tag("box_transparent.png",:alt=>"www.methodbox.org",:title=>"Methodbox",:height=>65), root_url -%>
</div>
<%= render :partial => "layouts/header_search_bar" -%>
<% end -%>
<div style="clear:both;">
</div>
