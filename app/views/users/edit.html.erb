<%
profile=@user.person
-%>

<div id="signup" class="yui-b">  
  <% form_for @user do |f| -%>
      <%= f.error_messages %>
      <p><label for "User">User</label><br/>
      <% if profile -%>
        <%= link_to h(profile.name),profile %>
      <% else -%>
        <span class='none_text'>No profile</span>
      <% end -%>
      <p><label for="password">New password</label><br/>
      <%= f.password_field :password %></p>
  
      <p><label for="password_confirmation">Confirm new password</label><br/>
      <%= f.password_field :password_confirmation %></p>
  
  
      <p><%= submit_tag 'Update' %></p>
  <% end -%>
                      
</div>
